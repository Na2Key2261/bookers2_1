<div class='container'>
  <div class='row'>
    <div class='col-md-3'> <!-- 変更 -->
      <h2>User info</h2>
      <%= render 'info', user: current_user %>
    </div>
    <div class='col-md-3'> <!-- 変更 -->
      <h2 class="mt-3">New book</h2>
      <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>

          <%= form_with model: @book do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>

            <h4>Opinion</h4>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book',class:"btn-success text-light" %>

          <% end %>
    </div>
    <div class='col-md-8 offset-md-1'> <!-- 変更 -->
      <h2>Users</h2>
      <%= render 'index', users: @users %>
    </div>
  </div>
</div>
