<div class="text-success">
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2   ">
      <h2 class="text-dark  py-4 mb-0">User info</h2>
      <div class="form-body p-4">
        <%= form_with model: @user, local: true do |f| %>
          <div class="form-group">
            <div class="input-group-prepend">
              <h6>Name</h6>
            </div>
            <%= f.text_field :name, autofocus: true, class: "form-control" %>
            <% if @user.errors.has_key?(:name) %>
              <p class="text-danger "><%= @user.errors[:name].first %></p>
            <% end %>
          </div>

          <div class="form-group">
            <h6>Image</h6>
        <%= f.file_field :profile_image, class: "form-control-file user_image" %>
            <% if @user.errors.has_key?(:profile_image) %>
              <p class="text-danger"><%= @user.errors[:profile_image].first %></p>
            <% end %>
          </div>

          <div class="form-group">
            <div class="input-group-prepend">
              <h6>Introduction</h6>
            </div>
            <%= f.text_area :introduction,  class: "form-control" %>
            <% if @user.errors.has_key?(:introduction) %>
              <p class="text-danger"><%= @user.errors[:introduction].first %></p>
            <% end %>
          </div>

          <%= f.submit "Update User", class:"btn btn-secondary" %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
